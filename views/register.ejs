<% include ./partials/header %>



<div class="form-container">
    <h1>Sign up</h1>
    <form action="/register" method="POST">
        <div class="form-group">
            <label for="">First Name</label>
            <input class="form-control" type="text" name="firstName" placeholder="John" required>
        </div>
        <div class="form-group">
            <label for="">Last Name</label>
            <input class="form-control" type="text" name="lastName" placeholder="Smith" required>
        </div>
        <div class="form-group">
            <label for="">Username</label>
            <input class="form-control" type="text" name="username" placeholder="johnny123" required>
        </div>
        <div class="form-group">
            <label for="">Password</label>
            <input class="form-control" type="password" name="password" placeholder="***********" required>
        </div>
        <div class="form-group">
            <label for="">Confirm Password</label>
            <input class="form-control" type="password" name="confirm" placeholder="***********" required>
        </div>
        <div class="form-group">
            <label for="">Email</label>
            <input class="form-control" type="email" name="email" placeholder="johnnysm@gmail.com" required>
        </div>
        <div class="form-group">
            <label for="">Avatar URL</label>
            <input class="form-control" type="text" name="avatar" placeholder="https://images.unsplash.com/photo-1530041539828-114de669390e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=2e6e87d1fd475be1e8cf17b74b93ff33&auto=format&fit=crop&w=500&q=60">
        </div>
        <div class="form-group">
            <label for="">Admin Code</label>
            <input class="form-control" type="text" name="adminCode" placeholder="jessus1442">
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary btn-block">Sign Up!!</button>
        </div>
    </form>
</div>

<% include ./partials/footer %>