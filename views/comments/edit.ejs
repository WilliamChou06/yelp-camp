<% include ../partials/header %>

<div class="container">
        <h1 class="text-center">Edit Comment by <%= comment.author.username %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Text"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>


<% include ../partials/footer %>
