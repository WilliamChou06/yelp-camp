<% include ../partials/header %>

<div class="container">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Campground Image</label>
                    <input type="file" name="image" id="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" placeholder="Description" ><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>


<% include ../partials/footer %>
