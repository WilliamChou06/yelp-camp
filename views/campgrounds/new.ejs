<% include ../partials/header %>

    <div class="container">
        <h1 class="text-center">Create a New Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="image">Campground Image</label>
                    <input type="file" name="image" id="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>


    <% include ../partials/footer %>