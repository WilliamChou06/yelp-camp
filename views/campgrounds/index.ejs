<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world.</p>
        <p><a class="btn btn-primary" href="/campgrounds/new">Add New Campground!</a></p>
        <p>
            <form class="form-inline" action="/campgrounds" method="GET">
                <div class="form-group">
                    <input class="form-control" type="text" name="search" placeholder="Campground Search...">
                </div>
                <input class="btn btn-outline-success" type="submit" value="Search">
            </form>
        </p>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row text-center">
        <% campgrounds.forEach(function (campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img" src="<%= campground.image %>">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %>
                        </h4>
                        <a class="btn btn-success btn-sm" href="/campgrounds/<%= campground._id %>">More info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    
</div>


<% include ../partials/footer %>
